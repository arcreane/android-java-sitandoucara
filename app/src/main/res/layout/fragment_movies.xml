<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.MoviesFragment">

    <LinearLayout
        android:id="@+id/movies_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#0D0D1D"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Texte "Available on:" -->
        <TextView
            android:id="@+id/available_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available on:"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Plateformes -->
        <TextView
            android:id="@+id/providers_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Netflix - Disney+"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Carte du film -->
        <LinearLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Poster -->
            <ImageView
                android:id="@+id/poster"
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:scaleType="fitCenter" />

            <!-- Infos film (titre + description) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#25233D"
                android:padding="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie Title"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie description here..."
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Boutons : précédent / like / suivant -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/btn_prev"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_dashboard_black_24dp"
                android:contentDescription="Previous" />

            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_notifications_black_24dp"
                android:contentDescription="Like"
                android:padding="16dp" />

            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_home_black_24dp"
                android:contentDescription="Next" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
